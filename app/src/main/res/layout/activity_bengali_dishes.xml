<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".BengaliDishes">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Bengali
Recipes"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/heading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_below="@+id/heading"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            android:paddingTop="30dp">

            <LinearLayout
                android:id="@+id/kacchi"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:background="#420815"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/kacchi_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/kacchi" />

                <TextView
                    android:id="@+id/kacchi_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Kachchi Biryani"
                    android:textColor="#ffffff"
                    android:textSize="45sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bunaKhichuri"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="20dp"
                android:background="#f5a824"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bunaKhichuri_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/vuna" />

                <TextView
                    android:id="@+id/bunaKhichuri_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Vuna Khichuri"
                    android:textColor="#ffffff"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panta"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="20dp"
                android:background="#462209"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/panta_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/panta" />

                <TextView
                    android:id="@+id/panta_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Panta Ilish"
                    android:textColor="#ffffff"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>