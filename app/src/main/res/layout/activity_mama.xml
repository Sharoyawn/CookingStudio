<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".Mama">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_player_mama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/youtube_player_mama">

        <LinearLayout
            android:id="@+id/linear_layout_ingredients_mama_txt"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/heading_mama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:text="Mama Chang"
                android:textColor="#000000"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredients_mama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_mama"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="Ingredients"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#0e8bff"
                />

            <TextView
                android:id="@+id/ingredients_mama_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ing_mama"
                android:textColor="#253180"
                />

            <TextView
                android:id="@+id/instruction_mama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_mama"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Instruction"
                android:textSize="30sp"
                android:textColor="#ff1c59"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instruction_mama_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ins_mama"
                android:layout_marginBottom="16dp"
                android:textColor="#253180"
                android:textIsSelectable="true"
                android:textAlignment="viewStart"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>