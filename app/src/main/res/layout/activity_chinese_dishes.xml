<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".ChineseDishes">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Chinese
Recipes"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/heading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_below="@+id/heading"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            android:paddingTop="30dp">

            //mama chang
            <LinearLayout
                android:id="@+id/mama_chang"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:background="#f95f2b"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mama_chang_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/mama_chang" />

                <TextView
                    android:id="@+id/mama_chang_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mama Chhang"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            //hot and sour soup
            <LinearLayout
                android:id="@+id/hotandsour_soup"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="20dp"
                android:background="#f99231"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotandsour_soup_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/hot_sour_soup" />

                <TextView
                    android:id="@+id/hotandsour_soup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Sour Soup"
                    android:textColor="#ffffff"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

            //tso
            <LinearLayout
                android:id="@+id/tso"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="20dp"
                android:background="#fba123"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tso_img"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/tso_chicken" />

                <TextView
                    android:id="@+id/tso_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Tso's Chicken"
                    android:textColor="#ffffff"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>

</RelativeLayout>